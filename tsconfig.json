{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "~components/*": ["src/components/*"],
      "~screens/*": ["src/screens/*"],
      "~assets/*": ["src/assets/*"],
      "~utils/*": ["src/utils/*"],
      "theme": ["./src/theme"]
    },
    "target": "es2016",
    "jsx": "react-native",
    "module": "commonjs",
    "types": ["react-native"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "extends": "expo/tsconfig.base",
  "exclude": ["node_modules"]
}
